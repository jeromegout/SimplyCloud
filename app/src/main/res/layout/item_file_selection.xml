<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="?selectableItemBackground"
				tools:ignore="RtlHardcoded">

	<CheckBox
		android:id="@+id/item_file_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		/>

	<ImageView
		android:id="@+id/item_icon_imageview"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/item_file_checkbox"
		android:src="@drawable/ic_file_pdf"
		tools:ignore="ContentDescription"/>

	<RelativeLayout
		android:id="@+id/texts"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/item_icon_imageview"
		android:layout_centerVertical="true"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		>

        <TextView
            android:id="@+id/item_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="EionAnneeIncompleteAMA.pdf"
            android:textAppearance="?android:textAppearanceListItem"
            android:textSize="14sp"/>

		<TextView
			android:id="@+id/item_file_details"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/item_filename"
			android:layout_marginTop="2dp"
			android:gravity="center_vertical"
            android:text="99 KO"
			android:textSize="12sp"/>
	</RelativeLayout>

	<ImageView
		android:id="@+id/dir_icon_inside"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:src="@drawable/ic_chevron_right"
		tools:ignore="ContentDescription"/>

</RelativeLayout>